<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" {{action "cancel"}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{t title}}</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-2">
            <h1>
              <span class="fa fa-2x {{icon}}"></span>
            </h1>
          </div>
          <div class="col-sm-10">
            <h4>
              {{t message}}
            </h4>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button {{action "cancel"}} type="button" class="btn btn-primary">{{t "modals.general.close"}}</button>
      </div>
    </div>
  </div>
</div>
